<%- include('./layout/top') %>

<div class="poll">
  <form action="/vote" method="post">
    <input type="text" name="userName" placeholder="Username">
    <input type="email" name="userEmail" placeholder="Email">
    <% for(let flavour of voteFlavour){ %>
    <div class="box-wrapper">
      <p><%= flavour.title %></p>
      <div>
        <input type="radio" value="<%= flavour.flavour_id %>" name="voteSelected" />
      </div>
    </div>
    <% } %>
    <button>Vote</button>
  </form>
</div>

<%- include('./layout/bottom') %>
